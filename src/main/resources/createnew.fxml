<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene stylesheets="@style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <root>
      <AnchorPane prefHeight="26.0" prefWidth="581.0">
         <children>
            <BorderPane prefHeight="53.0" prefWidth="581.0" styleClass="createnew-background">
               <bottom>
                  <HBox alignment="CENTER_RIGHT" prefHeight="41.0" prefWidth="629.0" spacing="10.0" BorderPane.alignment="CENTER">
                     <children>
                        <Button fx:id="newCreateButton" alignment="CENTER" mnemonicParsing="false" prefHeight="41.0" prefWidth="115.0" styleClass="main-button" text="Create">
                           <font>
                              <Font name="Arial" size="18.0" />
                           </font>
                           <padding>
                              <Insets bottom="5.0" left="25.0" right="25.0" top="5.0" />
                           </padding>
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
               </bottom>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <top>
                  <VBox prefHeight="39.0" prefWidth="541.0" spacing="20.0" BorderPane.alignment="CENTER">
                     <children>
                        <VBox prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                           <children>
                              <Label styleClass="createnew-label" text="Enter a name for you bulleted journal:">
                                 <font>
                                    <Font name="Arial Bold" size="23.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="newNameTextField" prefWidth="541.0" promptText="Enter a name" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: B3B3B3; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 15, 0, 0, 2);">
                                 <padding>
                                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                 </padding>
                                 <font>
                                    <Font name="Arial Bold" size="20.0" />
                                 </font>
                              </TextField>
                           </children>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </VBox>
                        <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                           <children>
                              <VBox prefHeight="72.0" prefWidth="259.0" spacing="10.0">
                                 <children>
                                    <Label styleClass="createnew-label" text="Max number of events">
                                       <font>
                                          <Font name="Arial Bold" size="23.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="newEventsMaxTextField" prefWidth="251.0" promptText="Enter a number" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: B3B3B3; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 15, 0, 0, 2);">
                                       <padding>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </padding>
                                       <font>
                                          <Font name="Arial Bold" size="20.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </VBox>
                              <VBox prefHeight="72.0" prefWidth="273.0" spacing="10.0">
                                 <children>
                                    <Label styleClass="createnew-label" text="Max number of tasks">
                                       <font>
                                          <Font name="Arial Bold" size="23.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="newTasksMaxTextField" prefWidth="541.0" promptText="Enter a number" style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-color: B3B3B3; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 15, 0, 0, 2);">
                                       <padding>
                                          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                       </padding>
                                       <font>
                                          <Font name="Arial Bold" size="20.0" />
                                       </font>
                                    </TextField>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                     <BorderPane.margin>
                        <Insets bottom="20.0" />
                     </BorderPane.margin>
                  </VBox>
               </top>
            </BorderPane>
         </children>
      </AnchorPane>
   </root>
</Scene>
